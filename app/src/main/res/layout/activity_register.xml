<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#BFD5E7"
        android:orientation="vertical">

        <TextView
            android:id="@+id/welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:padding="20dp"
            android:textColor="#000000"
            android:text="Welcome"
            android:textSize="50dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/register_textView_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#531010"
            android:text="info"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/register_textView_randomString"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#531010"
            android:text="12345677"
            android:textSize="35dp"
            android:visibility="invisible"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/register_editText_PutRandomString"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:textColorLink="#000000"
            android:textColorHint="#0038E6"
            android:inputType="textPersonName"
            android:visibility="invisible"
            android:hint="put the String above" />


        <EditText
            android:id="@+id/register_editText_User"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textColor="#000000"
            android:layout_marginTop="20dp"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:textColorLink="#000000"
            android:outlineAmbientShadowColor="#000000"
            android:outlineSpotShadowColor="#000000"
            android:textColorHighlight="#000000"
            android:shadowColor="#000000"
            android:textColorHint="#000000"
            android:inputType="textPersonName"
            android:hint="Login" />

        <EditText
            android:id="@+id/register_editText_Password"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="50dp"
            android:textColorHint="#000000"
            android:paddingRight="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:hint="Password"
            android:ems="10"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/register_button_signIn"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:textStyle="bold"
            android:background="@drawable/ic_corner"
            android:text="Sign In" />

        <TextView
            android:id="@+id/joinActivity_main_activity_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:textSize="15dp"
            android:gravity="center"
            android:textColor="#000000"

            android:text="Join now" />

        <TextView
            android:id="@+id/register_textView_timeCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:paddingTop="10dp"
            android:gravity="center"
            android:visibility="visible"

            />

    </LinearLayout>
</RelativeLayout>